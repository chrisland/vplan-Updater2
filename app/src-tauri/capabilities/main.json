{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }
      ,{ "path": "**" },{ "path": "**/*" },{ "path": "/**/*" }]
    },
    "fs:scope-app",
    "fs:scope-app-recursive",

    "fs:read-all",
    "fs:allow-unwatch",
    "fs:allow-watch",
    "fs:allow-read-dir",
    "fs:allow-read-file",

    "dialog:allow-open",

    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",

    {
      "identifier": "http:default",
      "allow": [{ "url": "https://*.*.de" }],
      "deny": [{ "url": "https://private.tauri.app" }]
    },
    "http:allow-fetch",
    "http:allow-fetch-read-body",
    "http:allow-fetch-send",
    "upload:allow-upload"

  ]
}